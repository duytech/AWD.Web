@*
// account start here
*@
@using AWD.Web.Core.ViewModels
@model LoginViewModel
@{
    ViewData["Title"] = "Account";
}
<h1>@ViewData["Title"]</h1>

<form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
    <div class="col-md-6"> 
        <img src="~/images/RMx_landing-page-graphic-device-2.png" class="login-image" />
    </div>
    <div class="col-md-4">
        <div class="by-logo">
            <div style="font-size:48px"> RMx </div>
            <div class="superscript">by Flintfox</div>
        </div>
        <div class="col-md-offset-4" style="position:relative;top:200px;">
            <div class="account-type">
                <h2>@ViewData["Title"]</h2>
                <h4>Use a local account to log in.</h4>
            </div>
            <hr />

            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group col-md-offset-2 col-md-12">
                <label asp-for="Email" class="control-label">EMAIL ADDRESS:</label>
                <div>
                    <input asp-for="Email" class="form-control" />
                    @*<span asp-validation-for="Email" class="text-danger"></span>*@
                </div>
            </div>
            <div class="form-group col-md-offset-2 col-md-12">
                <label asp-for="Password" class="control-label">PASSWORD:</label>
                <div>
                    <input asp-for="Password" class="form-control" />
                    @*<span asp-validation-for="Password" class="text-danger"></span>*@
                </div>
            </div>
            <div class="form-group col-md-offset-2 col-md-12">
                <input asp-for="RememberMe" />
                <label asp-for="RememberMe"> </label>
            </div>
            <div class="form-group col-md-offset-2 col-md-12">
                <button type="submit" class="btn btn-default btn-login">Log in</button>
            </div>
            <div class="form-group col-md-offset-2 col-md-12">
                <p>
                    <a asp-action="Register">Register as a new user</a>
                </p>
                <p>
                    <a asp-action="ForgotPassword">Forgot your password?</a>
                </p>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
